Purpose: update the email of the user with the matching first and last name
input:
  url: /users/name/:firstName-:lastName/email
  mehtod: put
  params: [:firstName, :lastName]
  body: {"email": "your-email@enterhere"}
output:
  json: {
          "acknowledged": true,
          "modifiedCount": 0,
          "upsertedId": null,
          "upsertedCount": 0,
          "matchedCount": 1
        }
  message: none

